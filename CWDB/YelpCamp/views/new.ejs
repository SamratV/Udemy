<% include partials/header %>

    <div class="container">
        <h1 style="text-align: center; margin-bottom: 30px;">Create new campground</h1>
        <div class="row">
            <div class="col-md-3" style="margin: 0px auto;">
                <form class="" action="/campgrounds" method="post">
                    <div class="form-group">
                        <label for="name">Campground name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Campground name">
                    </div>
                    <div class="form-group">
                        <label for="image">Image URL</label>
                        <input type="text" class="form-control" id="image" name="image" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" rows="5" class="form-control"></textarea>
                    </div>
                    <input class="btn btn-primary btn-block" type="submit" name="submit" value="Submit">
                </form>
                <br>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>

<% include partials/footer %>
